
<div class="page-header">
  <div class="pull-right">
    <%= link_to "New User", new_user_path, class: 'btn btn-info' %>
  </div>
  <h1>Users</h1>
</div>

<table class="table">

  <thead>
    <tr>
      <th class="col-md-2">Name</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= link_to "#{user.first_name} #{user.last_name}", user_path(user) %>
      </td>
      <td>
        <% if current_user.id == user.id || current_user.co_member?(user) || current_user.is_admin? %>
          <%= mail_to user.email %>
        <% end %>
      </td>
      <td>
        <% if current_user.id == user.id || current_user.is_admin? %>
          <div class="pull-right">
            <%= link_to "Edit", edit_user_path(user) %>
          </div>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>
