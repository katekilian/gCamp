
<div class="page-header">
  <div class="pull-right">
    <%= link_to "New User", new_user_path, class: 'btn btn-info' %>
  </div>
  <h1>Users</h1>
</div>

<table class="table">

  <thead>
    <tr>
      <th class="col-md-2">Name</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= user.first_name %> <%= user.last_name %>
      </td>
      <td>
        <%= mail_to user.email %>
      </td>
      <td>
        <div class="pull-right">
          <%= link_to "edit", edit_user_path(user) %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>
