<%= render partial: "shared/errors", locals: { object: @project } %>

<%= form_for(@project, html: {class: 'form-horizontal'}) do |f| %>

  <div class="field form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-md-6"><%= f.text_field :name, class: "form-control" %></div>
  </div>

  <div class="actions form-group">
    <div class="col-md-4 col-sm-offset-2">
      <%= f.submit name_of_button, class: "btn btn-primary" %>
      <%= link_to "Cancel", projects_path, class: "btn btn-default" %>
    </div>
  </div>

<% end %>
