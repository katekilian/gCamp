

  <div class="jumbotron">
    <h1>gCamp</h1>
    <p>Your life, organized.</p>
  </div>


  <div class="row">
    <div class="col-md-4">
      <p class="lead">
        <%= image_tag("1.jpg", :alt =>"1", class: "img-responsive") %>
      </p>
    </div>
    <div class="col-md-4">
      <p class="lead">
        <%= image_tag("2.jpg", :alt =>"2", class: "img-responsive") %>
      </p>
    </div>
    <div class="col-md-4">
      <p class="lead">
        <%= image_tag("3.jpg", :alt =>"3", class: "img-responsive") %>
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          Tasks
        </div>
        <div class="panel-body">
          Grouped by projects and lists.  Just the way you like 'em.
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          Permissions
        </div>
        <div class="panel-body">Fine-grained permissions</div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          Comments
        </div>
        <div class="panel-body">
          <ul>
            <li>Comment on tasks and documents</li>
            <li>Get email notifications</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <% @quotes_hash.each do |name, quote| %>
    <blockquote>
      <p><%= quote %></p>
      <footer><%= name %></footer>
    </blockquote>
