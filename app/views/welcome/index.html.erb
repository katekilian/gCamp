  <div class="columns">
    <div class="column column-twelve">
      <div class="jumbotron">
        <h1>gCamp</h1>
        <p>Your life, organized.</p>
      </div>
    </div>
  </div>

  <div class="columns">
    <div class="column-three">
      <p class="lead">
        <%= image_tag("1.jpg", :alt =>"1", class: "img-responsive") %>
      </p>
    </div>
    <div class="column column-three">
      <p class="lead">
        <%= image_tag("2.jpg", :alt =>"2", class: "img-responsive") %>
      </p>
    </div>
    <div class="column column-three">
      <p class="lead">
        <%= image_tag("3.jpg", :alt =>"3", class: "img-responsive") %>
      </p>
    </div>
  </div>

  <div class="columns">
    <div class="column column-three">
      <div class="panel panel-primary">
        <div class="panel-heading">
          Tasks
        </div>
        <div class="panel-body">
          Grouped by projects and lists.  Just the way you like 'em.
        </div>
      </div>
    </div>
    <div class="column column-three">
      <div class="panel panel-primary">
        <div class="panel-heading">
          Permissions
        </div>
        <div class="panel-body">Fine-grained permissions</div>
      </div>
    </div>
    <div class="column column-three">
      <div class="panel panel-primary">
        <div class="panel-heading">
          Comments
        </div>
        <div class="panel-body">
          <ul>
            <li>Comment on tasks and documents</li>
            <li>Get email notifications</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="column column-twelve">
    <% @quotes_hash.each do |name, quote| %>
      <blockquote>
        <p><%= quote %></p>
        <footer><em><%= name %></em></footer>
      </blockquote>
      <!-- <p><%= quote %></p>
      <p class="text-muted"><%= name %></p> -->
    <% end %>
  </div>
