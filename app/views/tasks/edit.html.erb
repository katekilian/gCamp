<div class="page-header">
  <h1>Edit Task</h1>
</div>

<ul class="breadcrumb">
  <li><%= link_to "Tasks", tasks_path, class: "breadcrumb" %></li>
  <li><%= link_to @task.description, task_path, class: "breadcrumb" %></li>
  <li class="active">Edit</li>
</ul>

<%= form_for @task do |f| %>
  <%= f.label :description %>
  <br/>
  <%= f.text_field :description %>
  <br/>
  <%= f.submit "Update Task" %>
  <br/>
  <%= link_to "Show", task_path %> | <%= link_to "Back", tasks_path %>
<% end %>
