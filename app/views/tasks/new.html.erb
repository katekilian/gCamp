<div class="page-header">
  <h1>New Task</h1>
</div>

<ul class="breadcrumb">
  <li><%= link_to "Tasks", tasks_path, class: "breadcrumb" %></li>
  <li class="active">New</li>
</ul>

<%= form_for(@task, html: {class: 'form-horizontal'}) do |f| %>
  <div class="field form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-md-4"><%= f.text_field :description, class: "form-control" %></div>
  </div>
  <div class="actions form-group">
    <div class='col-md-4 col-sm-offset-2'><%= f.submit "Create Task", class: "btn btn-primary" %>
      <%= link_to 'cancel', tasks_path, class: 'btn btn-default' %></div>
  </div>
<% end %>
